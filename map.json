{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Australian Bush fire satellite data (NASA)",
  "width": 1200,
  "height": 400,
  "title": "Australian Bush fire satellite data (NASA)",

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alwaysblazing/Australia-State-TopoJson-MapChart/master/au-states-topo.json",
        "format": {
          "type": "topojson",
          "feature": "austates"
        }
      },

      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#eee",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "./data.csv"
      },
      "projection": {
        "type": "mercator"
      },
      "params": [{
        "name": "dayornight",
        "select": {"type": "point", "fields": ["daynight"]},
        "bind": {"input": "select", "options": [null, "D", "N"]}
      }],
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
 

      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "frp",
          "type": "quantitative"
        },
        "color": {
          "field": "daynight",
          "type": "nominal"
        },
        "opacity": {
          "condition": { "param": "dayornight", "value": 1 },
          "value": 0
        }
      }
    }
  ]
}
