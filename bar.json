{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/Jiaxin0403/FIT3179-/main/data.csv"
  },
  "title": {
    "fontSize": 15  ,
    "text": "Comparison of the number of different satellite observations"
  },

  "width": "container",
  "height": "container",
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "field": "acq_date",
          "as": "count_of_records"
        }
      ],
      "groupby": ["satellite", "acq_date"]
    },
  
    {
      "calculate": "datum.satellite == 'Terra' ? -datum.count_of_records : datum.count_of_records",
      "as": "count"
    }
  ],
  "mark": { "type": "bar", "tooltip": { "content": "data" } },
 
  "encoding": {
    "y": {
      "field": "acq_date",
      "axis": null,
      "sort": "descending"
    },
    "x": {
      "aggregate": "sum",
      "field": "count",
      "title": "count",
      "axis": { "format": "s" }
    },
    "color": {
      "field": "satellite",
      "scale": { "range": ["#675193", "#ca8861"] },
      "legend": { "orient": "top", "title": null }
    }
  },
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false }
  }
}
